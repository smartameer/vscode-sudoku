{
	"name": "code-sudoku",
	"version": "1.0.0",
	"description": "Vscode Sudoku Game",
	"main": "./build/extension.js",
	"author": {
		"name": "ameer <smartameer@icloud.com>"
	},
	"publisher": "ameer",
	"license": "MIT",
	"engines": {
		"vscode": "^1.74.0"
	},
	"keywords": [
        "sudoku",
        "game",
        "vscode"
    ],
	"pricing": "Free",
	"repository": {
		"url": "https://github.com/smartameer/vscode-sudoku",
		"type": "github"
	},
	"funding": [
		{
			"type": "buymeacoffee",
		  	"url": "https://www.buymeacoffee.com/smartameer"
		}
	],
	"extensionKind": [
		"ui",
		"workspace"
	],
	"categories": [
		"Other"
	],
	"icon": "media/sudoku_128x128.png",
	"activationEvents": [],
	"contributes": {
		"configuration": [
			{
				"title": "Sudoku",
				"properties": {
					"sudoku.gameLevel": {
						"title": "Game level",
						"type": "string",
						"enum": [
							"easy",
							"normal",
							"hard"
						],
						"default": "easy"
					}
				}
			}
		],
		"views": {
			"explorer": [
				{
					"type": "webview",
					"id": "sudoku.game",
					"name": "Sudoku",
					"visibility": "visible",
					"contextualTitle": "Sudoku",
					"initialSize": 260
				}
			]
		},
		"commands": [
			{
				"command": "sudoku.new",
				"category": "Sudoku",
				"title": "New game",
				"icon": "$(empty-window)",
				"shortTitle": "New"
			},
			{
				"command": "sudoku.solve",
				"category": "Sudoku",
				"title": "Solve game",
				"icon": "$(play)",
				"shortTitle": "Solve"
			},
			{
				"command": "sudoku.validate",
				"category": "Sudoku",
				"title": "Validate game",
				"icon": "$(check-all)",
				"shortTitle": "Validate"
			},
			{
				"command": "sudoku.settings",
				"category": "Sudoku",
				"title": "Game level",
				"icon": "$(wrench)",
				"shortTitle": "Validate"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "sudoku.settings",
					"group": "navigation@4",
					"when": "view == sudoku.game"
				},
				{
					"command": "sudoku.new",
					"group": "navigation@2",
					"when": "view == sudoku.game"
				},
				{
					"command": "sudoku.validate",
					"group": "navigation@1",
					"when": "view == sudoku.game"
				},
				{
					"command": "sudoku.solve",
					"group": "navigation@3",
					"when": "view == sudoku.game"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^5.48.2",
		"eslint": "^8.0.1",
		"eslint-config-standard-with-typescript": "^39.0.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
		"eslint-plugin-promise": "^6.0.0",
		"typescript": "*"
	}
}
