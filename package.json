{
	"name": "code-sudoku",
	"displayName": "Sudoku Game",
	"version": "1.0.5",
	"description": "Vscode Sudoku Game",
	"main": "./build/extension.js",
	"publisher": "ameer",
	"license": "MIT",
	"engines": {
		"vscode": "^1.81.0"
	},
	"keywords": [
        "sudoku",
        "game",
        "vscode"
    ],
	"pricing": "Free",
	"repository": {
		"url": "https://github.com/smartameer/vscode-sudoku",
		"type": "github"
	},
	"funding": [
		{
			"type": "buymeacoffee",
		  	"url": "https://www.buymeacoffee.com/smartameer"
		}
	],
	"extensionKind": [
		"ui",
		"workspace"
	],
	"categories": [
		"Other"
	],
	"icon": "media/logo_128x128.png",
	"activationEvents": [],
	"contributes": {
		"configuration": [
			{
				"title": "Sudoku",
				"properties": {
					"sudoku.gameLevel": {
						"title": "Game level",
						"type": "string",
						"enum": [
							"easy",
							"normal",
							"hard"
						],
						"default": "normal"
					}
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "sudoku-game",
					"title": "Sudoku",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"sudoku-game": [
				{
					"type": "webview",
					"id": "sudoku.game",
					"name": "Sudoku",
					"visibility": "visible",
					"contextualTitle": "Sudoku",
					"initialSize": 260,
					"icon": "media/icon.svg"
				}
			]
		},
		"commands": [
			{
				"command": "sudoku.new",
				"category": "Sudoku",
				"title": "New game",
				"icon": "$(empty-window)",
				"shortTitle": "New"
			},
			{
				"command": "sudoku.solve",
				"category": "Sudoku",
				"title": "Solve game",
				"icon": "$(play)",
				"shortTitle": "Solve"
			},
			{
				"command": "sudoku.validate",
				"category": "Sudoku",
				"title": "Validate game",
				"icon": "$(check-all)",
				"shortTitle": "Validate"
			},
			{
				"command": "sudoku.settings",
				"category": "Sudoku",
				"title": "Game level",
				"icon": "$(gear)",
				"shortTitle": "Level"
			},
			{
				"command": "sudoku.scoreboard.show",
				"category": "Sudoku",
				"title": "Show scoreboard",
				"icon": "$(verified)",
				"shortTitle": "Show scoreboard"
			},
			{
				"command": "sudoku.scoreboard.hide",
				"category": "Sudoku",
				"title": "Hide scoreboard",
				"icon": "$(verified-filled)",
				"shortTitle": "Hide scoreboard"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "sudoku.settings",
					"group": "1_header@1",
					"when": "view == sudoku.game"
				},
				{
					"command": "sudoku.new",
					"group": "navigation@2",
					"when": "view == sudoku.game"
				},
				{
					"command": "sudoku.validate",
					"group": "navigation@1",
					"when": "view == sudoku.game"
				},
				{
					"command": "sudoku.solve",
					"group": "2_main@1",
					"when": "view == sudoku.game"
				},
				{
					"command": "sudoku.scoreboard.show",
					"group": "1_header@2",
					"when": "view == sudoku.game && sudoku-scoreboard == false"
				},
				{
					"command": "sudoku.scoreboard.hide",
					"group": "1_header@2",
					"when": "view == sudoku.game && sudoku-scoreboard == true"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.81.0",
		"@typescript-eslint/eslint-plugin": "^6.4.1",
    	"@typescript-eslint/parser": "^6.4.1",
		"eslint": "^8.0.1",
		"typescript": "^5.1.6"
	}
}
